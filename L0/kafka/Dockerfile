FROM bitnami/kafka:latest

# Set custom environment variables for KRaft mode (no Zookeeper)
ENV KAFKA_CFG_PROCESS_ROLES=broker,controller
ENV KAFKA_CFG_NODE_ID=1
ENV KAFKA_CFG_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT,CONTROLLER:PLAINTEXT
ENV KAFKA_CFG_LISTENERS=PLAINTEXT://0.0.0.0:9092,CONTROLLER://0.0.0.0:9093
ENV KAFKA_CFG_ADVERTISED_LISTENERS=PLAINTEXT://0.0.0.0:9092
ENV KAFKA_CFG_CONTROLLER_QUORUM_VOTERS=1@kafka:9093
ENV KAFKA_CFG_INTER_BROKER_LISTENER_NAME=PLAINTEXT
ENV KAFKA_CFG_CONTROLLER_LISTENER_NAMES=CONTROLLER
ENV ALLOW_PLAINTEXT_LISTENER=yes

# Expose Kafka port
EXPOSE 9092

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD kafka-broker-api-versions.sh --bootstrap-server localhost:9092 || exit 1 